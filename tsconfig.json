{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "declarationDir": "types",
    "jsx": "react",
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/__tests__/FeatureFlag.test.tsx",
    "src/__tests__/useIncognitus.test.tsx"
  ],
  "exclude": ["node_modules", "src/**/__tests__/*"]
}
